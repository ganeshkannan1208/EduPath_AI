{
  "schema_version": "v1.0",
  "entity": "Skill",

  "skill_schema": {
    "skill_id": {
      "type": "string",
      "description": "Unique identifier for the skill"
    },
    "name": {
      "type": "string",
      "description": "Name of the skill"
    },
    "skill_type": {
      "allowed_values": [
        "Technical",
        "Soft",
        "Domain-Specific",
        "Tool-Based",
        "Managerial"
      ]
    },
    "difficulty_level": {
      "allowed_values": [
        "Beginner",
        "Intermediate",
        "Advanced"
      ]
    },
    "related_domains": {
      "type": "array",
      "items": "string"
    },
    "related_jobs": {
      "type": "array",
      "items": {
        "job_id": "string",
        "weight": "number"
      }
    },
    "learning_effort": {
      "type": "string",
      "allowed_values": [
        "Low",
        "Medium",
        "High"
      ]
    },
    "learning_resources": {
      "type": "array",
      "items": [
        "Online Course",
        "Workshop",
        "Certification",
        "Self-Learning",
        "Apprenticeship"
      ]
    },
    "notes": {
      "type": "string",
      "optional": true
    }
  },

  "design_principles": [
    "Skills are independent learning units",
    "Skills support job and program recommendations",
    "Weights define relevance to jobs",
    "Schema supports upskilling and reskilling"
  ]
}
