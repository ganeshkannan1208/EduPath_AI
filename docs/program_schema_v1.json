{
  "schema_version": "v1.0",
  "entity": "Program",

  "program_schema": {
    "program_id": {
      "type": "string",
      "description": "Unique identifier for the program"
    },
    "name": {
      "type": "string",
      "description": "Official name of the program or course"
    },
    "program_type": {
      "type": "string",
      "allowed_values": [
        "School-Level",
        "Diploma",
        "ITI",
        "Undergraduate Degree",
        "Postgraduate Degree",
        "Doctoral Degree",
        "Professional Certification",
        "Skill-Only",
        "Apprenticeship",
        "Executive Education"
      ]
    },
    "domain_id": {
      "type": "string",
      "description": "Primary domain to which the program belongs"
    },
    "secondary_domains": {
      "type": "array",
      "items": "string",
      "description": "Related or supporting domains"
    },
    "duration": {
      "value": "number",
      "unit": {
        "allowed_values": ["months", "years"]
      }
    },
    "delivery_mode": {
      "type": "string",
      "allowed_values": [
        "Full-time",
        "Part-time",
        "Online",
        "Hybrid"
      ]
    },
    "eligibility_rules": {
      "min_qualification": "string",
      "required_subjects": {
        "type": "array",
        "items": "string"
      },
      "min_percentage": {
        "type": "number",
        "optional": true
      },
      "age_limit": {
        "type": "number",
        "optional": true
      }
    },
    "accepted_exams": {
      "type": "array",
      "items": {
        "exam_id": "string",
        "weight": "number"
      }
    },
    "outcomes": {
      "type": "array",
      "items": {
        "outcome_type": {
          "allowed_values": [
            "Job",
            "Higher_Studies",
            "Entrepreneurship",
            "Research"
          ]
        },
        "reference_id": "string",
        "weight": "number"
      }
    },
    "skill_outcomes": {
      "type": "array",
      "items": {
        "skill_id": "string",
        "weight": "number"
      }
    },
    "practical_exposure": {
      "type": "string",
      "allowed_values": [
        "Low",
        "Medium",
        "High"
      ]
    },
    "career_stability_score": {
      "type": "number",
      "range": [0, 1],
      "description": "Relative long-term stability of careers enabled by this program"
    },
    "notes": {
      "type": "string",
      "optional": true
    }
  },

  "design_principles": [
    "Program schema is domain-agnostic",
    "Eligibility rules are enforced before scoring",
    "Outcomes are weighted for ranking",
    "Schema supports both academic and skill-based programs"
  ]
}
